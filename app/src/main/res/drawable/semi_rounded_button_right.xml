<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:topLeftRadius="0.1dp" android:topRightRadius="6dp"
                android:bottomLeftRadius="0.1dp" android:bottomRightRadius="6dp"/>
            <solid android:color="@color/colorRed_light"/>
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:topLeftRadius="0.1dp" android:topRightRadius="6dp"
                android:bottomLeftRadius="0.1dp" android:bottomRightRadius="6dp"/>
            <solid android:color="@color/colorLightGray"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:topLeftRadius="0.1dp" android:topRightRadius="6dp"
                android:bottomLeftRadius="0.1dp" android:bottomRightRadius="6dp"/>
            <solid android:color="@color/colorLightGray"/>
        </shape>
    </item>
</selector>