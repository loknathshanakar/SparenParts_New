<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Product Summary Goes here,Maximum of one line"
        style="@android:style/TextAppearance.Medium"
        android:lines="1"
        android:textColor="@color/colorDarkGray"
        android:id="@+id/product_summary"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <RatingBar
        android:layout_marginTop="@dimen/ten_dp"
        android:layout_below="@id/product_summary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/StarRatingBar"
        android:id="@+id/ratingbar_default"
        />

    <TextView
        android:layout_marginLeft="@dimen/ten_dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="AAA Reviews"
        android:lines="1"
        android:textColor="@color/colorDarkGray"
        android:id="@+id/Reviews"
        android:layout_alignTop="@+id/ratingbar_default"
        android:layout_toRightOf="@+id/ratingbar_default"
        android:layout_toEndOf="@+id/ratingbar_default" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Availability"
        android:id="@+id/Availability"
        android:lines="1"
        android:textColor="@color/colorLightGray"
        android:layout_alignTop="@+id/Reviews"
        android:layout_toRightOf="@+id/Reviews"
        android:layout_toEndOf="@+id/Reviews"
        android:layout_marginLeft="@dimen/ten_dp"
        android:layout_marginStart="@dimen/ten_dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="IN OR OUT"
        android:lines="1"
        android:textColor="@color/colorRed"
        android:id="@+id/in_or_out"
        android:layout_alignTop="@+id/Availability"
        android:layout_toRightOf="@+id/Availability"
        android:layout_toEndOf="@+id/Availability"
        android:layout_marginLeft="@dimen/five_dp"
        android:layout_marginStart="@dimen/five_dp" />

</RelativeLayout>