<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/cart_item_container">

    <ImageView
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:id="@+id/product_image"
        android:src="@drawable/product_placeholder"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="@dimen/ten_dp"
        android:layout_marginStart="@dimen/ten_dp"
        android:layout_marginTop="@dimen/ten_dp"
        android:layout_marginBottom="@dimen/ten_dp" />

    <TextView
        android:layout_width="30dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/minus"
        android:background="@drawable/textview_border_no_bend"
        android:textColor="@color/colorDarkGray"
        android:padding="@dimen/eight_dp"
        android:id="@+id/minus"
        android:gravity="center"
        android:layout_below="@+id/product_image"
        android:layout_alignLeft="@+id/product_image"
        android:layout_alignStart="@+id/product_image" />

    <TextView
        android:inputType="number"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/number"
        android:background="@drawable/textview_border_no_bend"
        android:textColor="@color/colorDarkGray"
        android:padding="@dimen/eight_dp"
        android:id="@+id/number"
        android:gravity="center"
        android:layout_marginLeft="-1dp"
        android:layout_marginStart="-1dp"
        android:layout_alignBottom="@+id/minus"
        android:layout_toRightOf="@+id/minus"
        android:layout_toEndOf="@+id/minus" />

    <TextView
        android:layout_width="30dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/plus"
        android:background="@drawable/textview_border_no_bend"
        android:textColor="@color/colorDarkGray"
        android:padding="@dimen/eight_dp"
        android:id="@+id/plus"
        android:gravity="center"
        android:layout_marginLeft="-1dp"
        android:layout_marginStart="-1dp"
        android:layout_alignBottom="@+id/number"
        android:layout_toRightOf="@+id/number"
        android:layout_toEndOf="@+id/number" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:layout_marginLeft="@dimen/ten_dp"
        android:layout_marginStart="@dimen/ten_dp"
        android:maxLines="1"
        android:textColor="@color/colorBlack"
        android:textStyle="bold"
        android:text="Small Text"
        android:id="@+id/company_name"
        android:layout_alignTop="@+id/product_image"
        android:layout_toRightOf="@+id/product_image"
        android:layout_toEndOf="@+id/product_image" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="@string/REGISTRATION_DESC"
        android:maxLines="4"
        android:textColor="@color/colorBlack"
        android:textStyle="bold"
        android:id="@+id/product_summary"
        android:layout_below="@+id/company_name"
        android:layout_alignLeft="@+id/company_name"
        android:layout_alignStart="@+id/company_name" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Small Text"
        android:maxLines="1"
        android:textColor="@color/colorBlack"
        android:id="@+id/textView11"
        android:layout_below="@+id/product_image"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_marginRight="@dimen/three_dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Medium Text"
        android:maxLines="1"
        android:textColor="@color/colorBlack"
        android:id="@+id/product_cost"
        android:layout_alignBottom="@+id/product_image"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <ImageButton
        android:layout_width="18dp"
        android:layout_height="24dp"
        android:id="@+id/imageButton"
        android:layout_alignParentTop="true"
        android:background="@drawable/ic_action_cancel"
        android:layout_alignParentRight="true"/>

</RelativeLayout>